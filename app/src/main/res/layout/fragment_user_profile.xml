<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_theme_actionbar_text_color"
    tools:context="com.getmebag.bag.userprofile.UserProfileActivity.UserProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/default_theme_accent2"
        android:layout_weight="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:border_width="1dp"
            app:border_color="#ffcecece"
            android:src="@drawable/temp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_email"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_picture"
            android:textColor="@color/default_theme_color"
            android:layout_marginTop="@dimen/common_three_forth_margin"
            android:layout_marginBottom="@dimen/common_three_forth_margin"
            android:fontFamily="sans-serif"
            android:text="karthik.trn@gmail.com"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffebebeb"
        android:layout_weight="3">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/profile_listview_section_separator"
            android:layout_gravity="top"
            android:layout_alignParentTop="true"
            android:background="#ffcecece" />

        <ListView
            android:id="@+id/profile_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_listview_section_separator"
            android:divider="@null"
            android:dividerHeight="0dp"/>

     </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:id="@+id/profile_next"
        android:text="@string/next"
        style="@style/TextStyle.GeneralButton"
        android:background="@drawable/big_button_tap_state"
        android:visibility="visible"
        android:layout_weight="0"/>

</LinearLayout>
