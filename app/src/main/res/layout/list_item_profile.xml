<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_theme_accent3"
    android:minHeight="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <IconTextView
                android:id="@+id/profile_list_item_indication_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="60dp"
                android:textColor="@color/big_button_tap_state"
                android:textSize="30sp"
                tools:text="a" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:background="#ffcecece" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_list_item_description"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/default_theme_static_text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_quarter_margin"
                android:layout_marginEnd="@dimen/common_half_margin"
                android:layout_marginLeft="@dimen/common_quarter_margin"
                android:layout_marginRight="@dimen/common_mini_margin"
                android:gravity="center_vertical|start"
                android:text="{fa-android}" />

            <IconTextView
                android:id="@+id/profile_list_item_action_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/profile_list_item_description"
                android:layout_alignBaseline="@id/profile_list_item_description"
                android:text="{fa-android}"
                android:layout_alignWithParentIfMissing="true"
                android:textColor="@color/default_theme_static_text_color"
                android:textSize="16sp"
                tools:text="a" />

            <TextView
                android:id="@+id/profile_list_item_description_header"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/profile_list_item_description"
                android:layout_marginTop="@dimen/common_quarter_margin"
                android:layout_marginLeft="@dimen/common_quarter_margin"
                android:layout_marginRight="@dimen/common_quarter_margin"
                android:textColor="#FF0000"
                android:text="This cannot be changed later." />

        </RelativeLayout>

        <IconTextView
            android:id="@+id/profile_list_item_cta_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:minWidth="30dp"
            android:textColor="@color/default_theme_static_text_color"
            android:textSize="18sp"
            tools:text="a" />

    </LinearLayout>

    <View
        android:id="@+id/profile_list_bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_weight="0"
        android:background="#ffd7d7d7" />

</LinearLayout>