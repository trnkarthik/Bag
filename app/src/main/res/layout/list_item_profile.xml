<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_theme_accent3"
    android:minHeight="74dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <IconTextView
            android:id="@+id/profile_list_item_indication_icon"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:minWidth="60dp"
            android:textColor="@color/default_theme_static_text_color"
            android:textSize="24sp"
            tools:text="a" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_list_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_quarter_margin"
                android:layout_marginStart="@dimen/common_quarter_margin"
                android:layout_marginRight="@dimen/common_quarter_margin"
                android:layout_marginEnd="@dimen/common_quarter_margin"
                android:fontFamily="sans-serif"
                android:text="Description"
                android:textColor="@color/default_theme_dark_text_color"
                android:textSize="16sp" />

            <IconTextView
                android:id="@+id/profile_list_item_action_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/profile_list_item_description"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/profile_list_item_description"
                android:text="{fa-android}"
                android:textColor="@color/default_theme_static_text_color"
                android:textSize="16sp"
                tools:text="a" />

            <TextView
                android:id="@+id/profile_list_item_description_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_list_item_description"
                android:layout_marginLeft="@dimen/common_quarter_margin"
                android:layout_marginRight="@dimen/common_quarter_margin"
                android:layout_marginTop="@dimen/common_quarter_margin"
                android:fontFamily="sans-serif"
                android:textColor="@color/default_theme_warning_messages"
                android:textSize="14sp"
                tools:text="This cannot be changed later." />

        </RelativeLayout>

        <IconTextView
            android:id="@+id/profile_list_item_cta_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:minWidth="30dp"
            android:textColor="@color/default_theme_static_text_color"
            android:textSize="18sp"
            tools:text="a" />

    </LinearLayout>

    <View
        android:id="@+id/profile_list_bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_weight="0"
        android:background="#ffd7d7d7" />

</LinearLayout>