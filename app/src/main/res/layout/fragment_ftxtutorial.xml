<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.getmebag.bag.ftx.FTXTutorialActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/ftx_tutorial_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/ftx_tutorial_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        app:fillColor="#FF888888"
        app:pageColor="#88FF0000"
        app:radius="5dp"
        app:strokeColor="#FF000000"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ftx_sign_up"
            android:layout_weight="1"
            android:text="@string/ftx_sign_up"
            tools:ignore="NestedWeights" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ftx_log_in"
            android:layout_weight="1"
            android:text="@string/ftx_log_in" />

    </LinearLayout>

</LinearLayout>