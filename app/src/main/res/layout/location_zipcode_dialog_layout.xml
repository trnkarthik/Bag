<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp"
    android:background="@color/default_theme_accent2"
    android:orientation="vertical"
    android:padding="@dimen/common_margin"
    tools:context="com.getmebag.bag.ftx.FTXLocationFragment">

    <TextView
        android:id="@+id/location_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_half_margin"
        android:fontFamily="sans-serif"
        android:text="Enter your ZIP Code"
        android:textColor="@color/default_theme_color"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/location_dialog_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:fontFamily="sans-serif"
        tools:text="85027"
        android:inputType="number"
        android:textColor="@color/default_theme_static_icon_color"
        android:textSize="20sp" />

    <Button
        android:id="@+id/location_dialog_confirm_button"
        style="@style/TextStyle.GeneralButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_half_margin"
        android:background="@drawable/big_button_tap_state"
        android:gravity="center"
        android:text="@string/location_confirm_zipcode"/>

    <Button
        android:id="@+id/location_dialog_cancel_button"
        style="@style/TextStyle.GeneralButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_half_margin"
        android:background="@drawable/disabled_button_tap_state"
        android:gravity="center"
        android:text="@string/dialog_cancel"/>

</LinearLayout>