<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_theme_accent2"
    android:columnCount="1"
    android:orientation="horizontal"
    android:padding="@dimen/common_half_margin"
    android:rowCount="2"
    tools:context="com.getmebag.bag.connections.InviteContactsActivity.InviteContactsFragment">

    <TextView
        android:id="@+id/invite_contacts_big_header_main_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="@dimen/common_three_forth_margin"
        android:layout_row="0"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/invite_contacts_big_header_main_message"
        android:textColor="@color/default_theme_static_icon_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/common_three_forth_margin"
        android:layout_marginTop="@dimen/common_three_forth_margin"
        android:layout_row="1">

        <TextView
            android:id="@+id/invite_contacts_big_header_why_invite_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Why should I invite my friends"
            android:textColor="@color/big_button_tap_state"
            android:textSize="14sp" />

        <IconTextView
            android:id="@+id/invite_contacts_big_header_why_invite_link_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_half_margin"
            android:gravity="center_vertical"
            android:text="@string/icon_font_question"
            android:textColor="@color/big_button_tap_state"
            android:textSize="16sp" />

    </LinearLayout>

</GridLayout>
